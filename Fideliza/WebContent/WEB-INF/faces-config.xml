<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	<managed-bean>
		<managed-bean-name>clienteController</managed-bean-name>
		<managed-bean-class>br.com.fideliza.controller.ClienteController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>testeController</managed-bean-name>
		<managed-bean-class>br.com.fideliza.controller.TesteController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>empresaController</managed-bean-name>
		<managed-bean-class>br.com.fideliza.controller.EmpresaController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<navigation-rule>
		<display-name>cadastro_cliente.xhtml</display-name>
		<from-view-id>/cadastro_cliente.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/cadastro_cliente.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>cadastro_cliente.xhtml</display-name>
		<from-view-id>/cadastro_cliente.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>save</from-outcome>
			<to-view-id>/consulta_cliente.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>cadastro_empresa.xhtml</display-name>
		<from-view-id>/cadastro_empresa.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>empresaSalva</from-outcome>
			<to-view-id>/consulta_empresa.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>cadastro_empresa.xhtml</display-name>
		<from-view-id>/cadastro_empresa.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/cadastro_empresa.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
