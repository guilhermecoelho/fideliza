<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	<managed-bean>
		<managed-bean-name>consumidorController</managed-bean-name>
		<managed-bean-class>br.com.fideliza.controller.ConsumidorController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>empresaController</managed-bean-name>
		<managed-bean-class>br.com.fideliza.controller.EmpresaController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>promocaoController</managed-bean-name>
		<managed-bean-class>br.com.fideliza.controller.PromocaoController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>usuarioController</managed-bean-name>
		<managed-bean-class>br.com.fideliza.controller.UsuarioController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>funcionarioController</managed-bean-name>
		<managed-bean-class>br.com.fideliza.controller.FuncionarioController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<navigation-rule>
		<display-name>cadastro_cliente.xhtml</display-name>
		<from-view-id>restrito/cadastro_cliente.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>restrito/cadastro_cliente.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>cadastro_cliente.xhtml</display-name>
		<from-view-id>restrito/cadastro_cliente.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>save</from-outcome>
			<to-view-id>restrito/consulta_cliente.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>cadastro_empresa.xhtml</display-name>
		<from-view-id>/cadastro_empresa.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>empresaSalva</from-outcome>
			<to-view-id>/consulta_empresa.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>cadastro_empresa.xhtml</display-name>
		<from-view-id>/cadastro_empresa.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/cadastro_empresa.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>cadastro_promocao.xhtml</display-name>
		<from-view-id>/cadastro_promocao.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>save</from-outcome>
			<to-view-id>/consulta_promocao.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>login_consumidor.xhtml</display-name>
		<from-view-id>/login_consumidor.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>errorLogin</from-outcome>
			<to-view-id>/login_consumidor.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>login_empresa.xhtml</display-name>
		<from-view-id>/login_empresa.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>errorLogin</from-outcome>
			<to-view-id>/login_empresa.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<from-outcome>loginPage</from-outcome>
			<to-view-id>/login_consumidor.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>login_consumidor.xhtml</display-name>
		<from-view-id>/login_consumidor.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>loginConsumidor</from-outcome>
			<to-view-id>/restrito/consumidor/teste.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>login_empresa.xhtml</display-name>
		<from-view-id>/login_empresa.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>loginFuncionario</from-outcome>
			<to-view-id>/restrito/empresa/cadastro_promocao.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>login_empresa.xhtml</display-name>
		<from-view-id>/login_empresa.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>loginEmpresa</from-outcome>
			<to-view-id>/restrito/empresa/cadastro_terminal.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<lifecycle>
		<phase-listener>br.com.fideliza.filter.AuthorizationListener</phase-listener>
	</lifecycle>

</faces-config>
